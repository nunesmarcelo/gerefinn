					</div>
			  </div>

				<div class="form-group row">
					@Html.LabelFor(model => model.pago, htmlAttributes: new { @class = "control-label col-md-5 col-sm-12 " })
					<div class="col-md-7">
			
						<div class="checkbox">				
							<label class="quadrado">
								@Html.EditorFor(model => model.pago ,  new { htmlAttributes = new { @class = "form-control" } })
