@model GerenciadorFinanceiro.Models.lancamento


@{
    ViewBag.Title = "Delete";
    Layout = null;
}


<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title">Deleção de Lancamento</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
		@using (Html.BeginForm("Delete", "Lancamento", FormMethod.Post)) {
			<div class="modal-body">
                @Html.AntiForgeryToken()
				 <div class="dl-horizontal row col-12 ml-4 mb-5 mt-5" style="text-transform: uppercase;">
                    <div class="col-12">
                        <div class="h3">Confirma exclusão?</div>
                    </div>
					<fieldset>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.descricao) : <b>@Html.DisplayFor(model => model.descricao)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.valortotal) : <b>@Html.DisplayFor(model => model.valortotal)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.pago) : <b>@Html.DisplayFor(model => model.pago)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.datavencimento) : <b>@Html.DisplayFor(model => model.datavencimento)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.datacadastro) : <b>@Html.DisplayFor(model => model.datacadastro)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.observacao) : <b>@Html.DisplayFor(model => model.observacao)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.categoria.nome) : <b>@Html.DisplayFor(model => model.categoria.nome)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.contasaldo.nome) : <b>@Html.DisplayFor(model => model.contasaldo.nome)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.instituicao.nome) : <b>@Html.DisplayFor(model => model.instituicao.nome)</b>
                    </div>
					<br />
                    <div class="mt-3 row col-12">
                        @Html.DisplayNameFor(model => model.usuario.nome) : <b>@Html.DisplayFor(model => model.usuario.nome)</b>
                    </div>
					</fieldset>
				</div>	

				<div class="modal-footer">
					<button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
					<button type="submit" value="Save" class="btn btn-outline-danger">Salvar</button>
				</div>
			</div>
		}
    </div>
</div>
