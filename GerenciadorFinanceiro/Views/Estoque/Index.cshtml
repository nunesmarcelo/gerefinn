@model IEnumerable<GerenciadorFinanceiro.Models.estoque>

@{
    ViewBag.Title = "Index Estoque";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12" style="text-align:right;margin-bottom:15px;">
    <a href="~/Estoque/Create" class="btn btn-outline-success"> <span class="fas fa-plus"></span> Depósito</a>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.responsavel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-uppercase">
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td class="text-uppercase">
                @Html.DisplayFor(modelItem => item.responsavel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefone)
            </td>
            <td class="text-uppercase">
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                <a href="~/Estoque/Edit/@item.id"><span style="font-size:16pt;" class="far fa-edit"></span></a>
                <a href="~/Estoque/Details/@item.id"><span style="font-size:16pt;" class="far fa-eye"></span></a>
                <a href="~/Estoque/Delete/@item.id"><span style="font-size:16pt;" class="far fa-trash-alt"></span></a>
            </td>
        </tr>
    }

</table>
