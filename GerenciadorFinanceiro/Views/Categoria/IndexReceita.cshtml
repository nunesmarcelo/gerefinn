@model IEnumerable<GerenciadorFinanceiro.Models.categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12" style="text-align:right;margin-bottom:15px;">
    <a href="~/Categoria/CreateReceita" class="btn btn-outline-success"> <span class="fas fa-plus"></span> Categoria</a>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td class="text-uppercase">
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td class="text-uppercase">
                @Html.DisplayFor(modelItem => item.descricao)
            </td>
            <td>
                <a href="~/Categoria/Edit/@item.id"><span style="font-size:16pt;" class="far fa-edit"></span></a>
                <a href="~/Categoria/Details/@item.id"><span style="font-size:16pt;" class="far fa-eye"></span></a>
                <a href="~/Categoria/Delete/@item.id"><span style="font-size:16pt;" class="far fa-trash-alt"></span></a>
            </td>
        </tr>
    }

</table>
